<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WeatherView">
        <attr name = "weather_city" format = "string"/>
        <attr name = "weather_country" format = "string"/>
        <attr name = "weather_temp" format = "string"/>
        <attr name = "weather_wind" format = "boolean"/>
        <attr name = "weather_time" format = "enum">
            <enum name="night" value="0"/>
            <enum name="day" value="1" />
        </attr>
        <attr name = "weather_type" format = "enum">
            <enum name="weak_rain" value="0"/>
            <enum name="strong_rain" value="1" />
            <enum name="weak_snowfall" value="2"/>
            <enum name="strong_snowfall" value="3" />
        </attr>
    </declare-styleable>
</resources>