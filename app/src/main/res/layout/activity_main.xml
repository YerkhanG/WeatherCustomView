<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.weatherview.WeatherView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:weather_city="Moscow"
        app:weather_country="Russia"
        app:weather_temp="19*"
        app:weather_time="day"
        app:weather_wind="true"/>
    <com.example.weatherview.WeatherView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:weather_city="New York"
        app:weather_country="USA"
        app:weather_temp="32*"
        app:weather_time="night"
        app:weather_type="weak_rain"
        app:weather_wind="false"
        />



</LinearLayout>